//Configuration for use to use express and node in next.js
{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonJS",  // Use "ESNext" for modern ES modules
    "moduleResolution": "node",  // "node" is typical for bundlers
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/OAuth/googleOauth.tsx", "src/components/ui/public/", "src/components/ui/public/", "src/app/api/auth/[...nextauth]", "*.css"],
  "exclude": ["node_modules"]
}