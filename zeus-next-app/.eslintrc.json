{
	"extends": ["plugin:react/recommended", "standard-with-typescript", "next/core-web-vitals"],
  "env": {
		"browser": true,
		"es2021": true
	},
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-tabs": 0,
		"indent": [2, "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"comma-dangle": "off",
		"@typescript-eslint/comma-dangle": "off",
		"react/prop-types": "off",
		"space-before-function-paren": "off"
	}
}
