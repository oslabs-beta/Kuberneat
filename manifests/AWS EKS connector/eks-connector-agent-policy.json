{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "SsmControlChannel",
          "Effect": "Allow",
          "Action": [
              "ssmmessages:CreateControlChannel"
          ],
          "Resource": "arn:aws:eks:*:*:cluster/*"
      },
      {
          "Sid": "ssmDataplaneOperations",
          "Effect": "Allow",
          "Action": [
              "ssmmessages:CreateDataChannel",
              "ssmmessages:OpenDataChannel",
              "ssmmessages:OpenControlChannel"
          ],
          "Resource": "*"
      }
  ]
}